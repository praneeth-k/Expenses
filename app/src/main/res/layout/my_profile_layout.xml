<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="10dp"
    android:paddingHorizontal="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/idTAG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="ID"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/profileIdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textIsSelectable="true"
        app:layout_constraintStart_toEndOf="@+id/idTAG"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="5dp"
        android:text="" />
    <TextView
        android:id="@+id/nameTAG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileIdTextView"
        android:padding="5dp"
        android:text="Name" />
    <TextView
        android:id="@+id/profileNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textIsSelectable="true"
        app:layout_constraintStart_toEndOf="@id/nameTAG"
        app:layout_constraintTop_toBottomOf="@+id/profileIdTextView"
        android:padding="5dp"
        android:text="" />
    <TextView
        android:id="@+id/emailTAG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/profileNameTextView"
        android:padding="5dp"
        android:text="Email" />
    <TextView
        android:id="@+id/profileEmailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textIsSelectable="true"
        app:layout_constraintStart_toEndOf="@id/emailTAG"
        app:layout_constraintTop_toBottomOf="@+id/profileNameTextView"
        android:padding="5dp"
        android:text="" />
</androidx.constraintlayout.widget.ConstraintLayout>